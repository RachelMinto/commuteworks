<div class="well">
  <%= form_for @user do |f| %>
    <%= render 'shared/error', obj: @user %>
    <div class='control-group'>
      <%= f.label :first_name %>
      <%= f.text_field :first_name %>
    </div> 
    <div class='control-group'>
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
    </div>
    <div class='control-group'>
      <%= f.label :address %>
      <%= f.text_field :address %>
      <%= f.label :apt %>
      <%= f.text_field :apt %>      
      <%= f.label :city %>
      <%= f.text_field :city %>
      <%= f.label :state %>
      <%= f.select :state, us_states %>
      <%= f.label :zipcode %>
      <%= f.text_field :zipcode %>
      <%= f.label :employer %>
      <%= f.select :employer_id, Employer.all.collect { |p| [ p.name, p.id ] }%>      
    </div>         
    <div class='control-group'>
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>
   <div class='control-group'>
      <%= f.label "How do you get to work? Please choose all that apply" %>
      <%= f.collection_check_boxes :commute_mode_ids, CommuteMode.all, :id, :mode do |cb| %>
        <%= cb.label(class: "checkbox inline") {cb.check_box(class: 'checkbox') + cb.text} %>
      <% end %>
    </div>    
    <div class='control-group'>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>              
    <%= f.submit @user.new_record? ? "Register" : "Update Profile", class: 'btn btn-success' %>
  <% end %>
</div>