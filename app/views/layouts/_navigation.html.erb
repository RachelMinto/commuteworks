<ul class="nav">
  <li>
    <%= link_to "CommuteWorks!", root_path, :class => 'brand' %>
  </li>
</ul>
<div class="btn-group nav_item">
  <%= link_to '#', class: 'btn btn-success btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
    Programs <span class='caret'></span>
  <% end %>
  <ul class='dropdown-menu'>
    <li>
      <%= link_to commutefit_index_path do %>
        CommuteFit
      <% end %>
    </li>
    <li>
      <%= link_to carpool_index_path do %>
        Carpool
      <% end %>
    </li>
    <li>
      <%= link_to emergency_ride_home_index_path do %>
        Emergency Ride Home
      <% end %>
    </li>        
  </ul>
</div>

  <% if logged_in? %>
    <div class="btn-group nav_item">
      <%= link_to '#', class: 'btn btn-small dropdown-toggle', 'data-toggle' => 'dropdown' do %>
        <%= current_user.first_name %><span class='caret'></span>
      <% end %>
      <ul class='dropdown-menu'>
        <li>
          <%= link_to edit_user_path(current_user.id) do %>
          <i class="icon-pencil"></i>
          edit profile
          <% end %>
        </li>
        <li>
          <%= link_to user_path(current_user.id) do %>
            <i class="icon-user"></i>
            view profile
          <% end %>
        </li>        
        <li>
          <%= link_to logout_path do %> 
            <i class="icon-circle-arrow-left"></i>
            logout
          <% end %>
        </li>
      </ul>
    </div>
  <% else %>
    <div class="nav_item">
      <%= link_to 'Register', register_path, class: 'btn btn-success btn-small' %>
    </div>
    <div class="nav_item">
      <%= link_to 'Login', login_path, class: 'btn btn-success btn-small' %>
    </div>    
  <% end %>



